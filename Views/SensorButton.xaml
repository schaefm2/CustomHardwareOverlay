<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    mc:Ignorable="av" 
    x:Class="Hardware_Monitor.Views.SensorButton"
    x:Name="Root">
    <Button Style="{StaticResource MainButton}" Command="{Binding Command, ElementName=Root}" >
        <StackPanel Orientation="Horizontal" >
            <Label Content="{Binding Label, ElementName=Root}" FontSize="12" HorizontalAlignment="Center" Foreground="White"/>
            <TextBlock Text="{Binding Value, ElementName=Root}" FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>
    </Button>
</UserControl>
