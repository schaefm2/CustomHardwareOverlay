<UserControl x:Class="Hardware_Monitor.Views.SensorTree"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hardware_Monitor.Views"
             xmlns:vm="clr-namespace:Hardware_Monitor.ViewModel"
             x:Name="Root"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TreeView Grid.Column="2" ItemsSource="{Binding ItemsSource, ElementName=Root}">
        <TreeView.Resources>
            <DataTemplate DataType="{x:Type vm:SensorViewModel}">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
                    <TextBlock Text="{Binding Value}" Margin="5,0,0,0"/>
                    <Button Content="+" Command="{Binding AddCommand, ElementName=Root}" CommandParameter="{Binding}"/>
                </StackPanel>
            </DataTemplate>
            <HierarchicalDataTemplate DataType="{x:Type vm:TypeSensorViewModel}"
                      ItemsSource="{Binding Sensors}">
                <TextBlock Text="{Binding Name}" FontWeight="Bold"/>
            </HierarchicalDataTemplate>
        </TreeView.Resources>
    </TreeView>
</UserControl>
