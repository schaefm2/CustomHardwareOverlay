<UserControl x:Class="Hardware_Monitor.Views.SensorItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Hardware_Monitor.Views"
             mc:Ignorable="d" 
             >
    <Grid>
        <Button Style="{StaticResource MainButton}" Command="{Binding Command, ElementName=Root}" >
            <StackPanel Orientation="Horizontal" >
                <Label Content="{Binding Label, ElementName=Root}" FontSize="12" HorizontalAlignment="Center" Foreground="White"/>
                <TextBlock Text="{Binding Value, ElementName=Root}" FontSize="12" HorizontalAlignment="Center"/>
            </StackPanel>
        </Button>
    </Grid>
</UserControl>
